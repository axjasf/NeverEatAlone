[flake8]
# Match black's default line length
max-line-length = 88
extend-ignore = D100,D101,D102,D103,D104,D105,D200,D205,D400,D401,E203,W503

exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.pyc,
    *.egg-info,
    .eggs,
    venv,
    .venv,
    .env,
    env

per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py: F401
    # Allow undefined names in models (they're resolved at runtime)
    app/models/orm/*.py: F821

# Specify the order of imports
import-order-style = google
